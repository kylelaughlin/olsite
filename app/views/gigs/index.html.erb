<div class="content-container section">
  <p id="notice"><%= notice %></p>

  <h1>Gigs</h1>
  <%= link_to 'New Gig', new_gig_path %>
  <div class="form-wrapper">
    <table class="table">
      <thead>
        <tr>
          <th>Time</th>
          <th>Venue</th>
          <th>Performance date</th>
          <th>Location</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @gigs.each do |gig| %>
          <tr>
            <td><%= gig.time %></td>
            <td><%= gig.venue %></td>
            <td><%= gig.performance_date %></td>
            <td><%= gig.location %></td>
            <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
            <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Gig', new_gig_path %>
  </div>
</div>
